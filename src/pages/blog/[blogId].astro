---
import { client } from "@/commons/clients/MicroCMSClient";
import type { Blog } from "@/commons/types/Blog";
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

const { blogId } = Astro.params;

const blog = await client.getListDetail<Blog>({
  endpoint: "blogs",
  contentId: blogId as string,
});
---

<!doctype html>
<html>
  <head>
    <BaseHead title="Blog" description="Blog" />
  </head>
  <body>
    <Header />
    <main>
      <article class="prose prose-sm lg:prose-xl">
        <h1>{blog.title}</h1>
        <div set:html={blog.content} />
      </article>
    </main>
    <Footer />
  </body>
</html>
