<mockup-applied-code-block-component>
  <pre class="flex">
    <code>const hello = "Hello"</code>
  </pre>
</mockup-applied-code-block-component>

<script>
  class MockupAppliedCodeBlockComponent extends HTMLElement {
    constructor() {
      super();

      this.querySelectorAll("code").forEach((code) => {
        const pre = code.closest("pre");
        if (!pre) {
          return;
        }
        const div = document.createElement("div");
        div.classList.add("mockup-code");
        div.append(pre.cloneNode(true));
        pre.replaceWith(div);
      });
    }
  }
  customElements.define(
    "mockup-applied-code-block-component",
    MockupAppliedCodeBlockComponent,
  );
</script>
